{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/game/*": ["src/game/*"],
      "@/ui/*": ["src/ui/*"],
      "@/effects/*": ["src/effects/*"],
      "@/audio/*": ["src/audio/*"]
    }
  },
  "include": ["src"]
}